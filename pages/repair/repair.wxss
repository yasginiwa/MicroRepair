/* pages/repair/repair.wxss */

.banner image {
  width: 100%;
  height: 460rpx;
}

.devicebind {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  border: 1rpx solid #bbb;
  width: 96%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 8rpx auto;
  position: relative;
  left: 100vw;
  font-size: 30rpx;
  color: #bbb;
  box-shadow: 0 1rpx rgba(50, 50, 50, 0.1);
}

.devicebind input {
  width: 100%;
  flex: 1;
  padding-left: 40%;
}

.devicebind text {
  display: inline-block;
  height: 50rpx;
  color: #bbb;
  line-height:50rpx;
  margin-left: 42%;
}

.devicebind image {
  width: 35rpx;
  height: 35rpx;
  position: relative;
  left: 40%;
}

.middle {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -50vh;
}

.middle .scan_query {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #898d8d;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
}

.middle .scan_query image {
  width: 75rpx;
  height: 75rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -50vh;
}

.bottom .scan_repair {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #898d8d;
  border-radius: 50%;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  width: 180rpx;
  height: 180rpx;
}

.bottom .scan_repair image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}

.scan_text {
  color: white;
  font-size: 25rpx;
}
