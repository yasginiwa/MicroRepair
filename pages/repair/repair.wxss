/* pages/repair/repair.wxss */
page {
  background-color: #eee;
}

.banner image {
  width: 100%;
  height: 460rpx;
}

.middle {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.middle .scan_query {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #0067a5;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
}

.middle .scan_query image {
  width: 75rpx;
  height: 75rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.bottom .scan_repair {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #0067a5;
  border-radius: 50%;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  width: 180rpx;
  height: 180rpx;
}

.bottom .scan_repair image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}

.scan_text {
  color: white;
  font-size: 25rpx;
}

.devicebind {
  position: fixed;
  left: 50rpx;
  bottom: 50rpx;
  background-color: #5b4b22;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
}

.devicebind image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
}

.devicebind text {
  display: block;
  color: #fff;
  font-size: 15rpx;
  position: relative;
  top: 5rpx;
}
