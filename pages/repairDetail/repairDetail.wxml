<!--pages/repairDetail/repairDetail.wxml-->
<view class='block'>
  <view class='item'>
    <text>资产标识</text>
    <text class='recordID'>{{record.deviceid}}</text>
  </view>

  <view class='item'>
    <text>所属门店</text>
    <picker bindchange='onFillShopNum' range='{{shops}}' value='{{shopIdx}}'>
      {{shops[shopIdx]}}
    </picker>
    <image src='../../assets/images/repairDetail/arrow.png'></image>
  </view>

  <view class='item'>
    <text>所属仓库</text>
    <picker bindchange='onFillStorageNum' range='{{storages}}' range-key="{{'name'}}" value='{{storageIdx}}'>{{storages[storageIdx].name}}</picker>
    <image src='../../assets/images/repairDetail/arrow.png'></image>
  </view>

  <view class='item'>
    <text>原因类型</text>
    
    <picker-view bindchange='onFillReasonType'>

      <picker-view-column>
        <view wx:for='{{reasonTypes}}' wx:key='value'>{{item}}</view>
      </picker-view-column>
      
    </picker-view>
    <image src='../../assets/images/repairDetail/arrow.png'></image>

  </view>

  <view class='item'>
    <text>结果类型</text>
    <picker bindchange='onFillResultType' range='{{resultTypes}}' range-key="{{'title'}}" value='{{resultTypeIdx}}'>{{resultTypes[resultTypeIdx].title}}</picker>
    <image src='../../assets/images/repairDetail/arrow.png'></image>
  </view>

  <view class='item'>
    <text>维修时间</text>
    <picker class='alarm_picker' mode="multiSelector" value="{{dateTime}}" bindchange="changeDateTime" bindcolumnchange="changeDateTimeColumn" range="{{dateTimeArray}}">
      <view class="picker">
        {{record.maintaindate}}
      </view>
    </picker>
    <image src='../../assets/images/repairDetail/arrow.png'></image>
  </view>

  <view class='description'>
    <view class='title'>
      <text>原因详情</text>
      <image src='../../assets/images/repairDetail/reason.png'></image>
    </view>
    <textarea bindinput='OnReasonConfirm' placeholder='故障原因描述...' placeholder-style='font-size: 30rpx;color: #dbdbdb;' value="{{record.reason}}"></textarea>
  </view>

  <view class='description'>
    <view class='title'>
      <text>结果详情</text>
      <image src='../../assets/images/repairDetail/result.png'></image>
    </view>
    <textarea bindinput='OnResultConfirm' placeholder='维修结果描述...' placeholder-style='font-size: 30rpx; color: #dbdbdb;' value="{{record.result}}"></textarea>
  </view>

  <view class='commit'>
    <button bindtap='onCommit' disabled='{{commitDisable}}'>提 交</button>
  </view>



</view>