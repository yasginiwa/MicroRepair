/* pages/repairDetail/repairDetail.wxss */

page {
  background-color: #f8f8f8;
  font-size: 30rpx;
}

.block .item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}

.block .item text {
  margin-left: 20rpx;
}

.block .item .recordID {
  position: absolute;
  right: 40rpx;
  text-align: right;
}

.block .item input {
  position: absolute;
  text-align: right;
  right: 80rpx;
}

.block .item picker {
  position: absolute;
  right: 80rpx;
}

.block .item image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.description {
  width: 100%;
}

.description .title {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  }

.description text{
  display: block;
  margin: 20rpx 10rpx 20rpx 20rpx;
}

.description image {
  width: 30rpx;
  height: 30rpx;
}

.description textarea {
  border-radius: 10rpx;
  background-color: #fff;
  height: 180rpx;
  width: 100%;
  padding: 20rpx;
}

.commit {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  
}

.commit button {
  margin-top: 40rpx;
  width: 70%;
  color: white;
  background-color: #f3c516;
}
