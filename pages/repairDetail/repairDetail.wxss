/* pages/repairDetail/repairDetail.wxss */

page {
  background-color: #eee;
}

.block {
  display: flex;
  flex-flow: column nowrap;
}

.block .item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  width: 100%;
  height: 100rpx;
}

.block .item text {
  margin-left: 20rpx;
}

.block .item .recordID {
  margin-right: 20rpx;
  text-align: right;
}

.block .item input {
  position: absolute;
  text-align: right;
  right: 80rpx;
}

.block .item picker {
  position: absolute;
  right: 80rpx;
}

.block .item image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.block .item_audio {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background-color: white;
  width: 100%;
  height: 90rpx;
  border-bottom: solid #eee 20rpx;
}

.block .item_audio text {
  margin-left: 20rpx;
}

.block .item_audio image {
  margin-left: 60rpx;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
}

.block .item_audio .audioImg {
  width: 40%;
  height: 60rpx;
  margin-right: 20rpx;
}

.block .item_audio .hint {
  margin-right: 20rpx;
  color: lightgray;
  position: absolute;
  right: 60rpx;
}

.speak-style {
  background-color: rgba(70, 70, 70, 0.8);
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  left: 50%;
  top: 50%;
  margin-left: -125rpx;
  margin-top: -125rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

.sound-style {
  position: absolute;
  width: 52rpx;
  height: 82rpx;
  margin-top: 59rpx;
  margin-left: 74rpx;
}

.commit {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.commit button {
  margin-top: 40rpx;
  width: 70%;
}
